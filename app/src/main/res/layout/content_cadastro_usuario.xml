<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Visao.activity.Cadastro_Usuario"
    tools:showIn="@layout/activity_cadastro_usuario">


    <TextView
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Junte-se a nos!"
        android:textSize="20sp"
        android:gravity="center"
        android:textStyle="bold"/>

    <!-- Linear Layout Pai -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp"
        >

        <!-- Relative com icones -->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginLeft="25dp">

            <!--Icone Nome -->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_account_grey600_24dp"
                android:layout_marginTop="24dp"/>

            <!--Icone Usuario -->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_account_star_grey600_24dp"
                android:layout_marginTop="77dp"/>

            <!--Icone Email -->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_email_grey600_24dp"
                android:layout_marginTop="130dp"/>

            <!--Icone senha -->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_lock_grey600_24dp"
                android:layout_marginTop="185dp"/>

        </RelativeLayout>


        <!-- Linear layout com editText -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:orientation="vertical"
            >


            <!--Nome Flutuante -->
            <com.wrapp.floatlabelededittext.FloatLabeledEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin">

                <EditText
                    android:id="@+id/cadNome"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:hint="Nome"
                    android:inputType="textPersonName"/>
            </com.wrapp.floatlabelededittext.FloatLabeledEditText>

            <!--User Flutuante -->
            <com.wrapp.floatlabelededittext.FloatLabeledEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin">

                <EditText
                    android:id="@+id/cadUsuario"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:hint="UsuÃ¡rio"
                    android:inputType="textPersonName"/>
            </com.wrapp.floatlabelededittext.FloatLabeledEditText>

            <!--Email Flutuante -->
            <com.wrapp.floatlabelededittext.FloatLabeledEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin">

                <EditText
                    android:id="@+id/cadEmail"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:hint="E-Mail"
                    android:inputType="textEmailAddress"/>
            </com.wrapp.floatlabelededittext.FloatLabeledEditText>

            <!--senha Flutuante -->
            <com.wrapp.floatlabelededittext.FloatLabeledEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin">

                <EditText
                    android:id="@+id/cadSenha"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:hint="Senha"
                    android:inputType="textPassword"/>
            </com.wrapp.floatlabelededittext.FloatLabeledEditText>




        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
